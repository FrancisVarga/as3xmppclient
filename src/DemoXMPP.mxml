<?xml version="1.0" encoding="utf-8"?>
<mx:WindowedApplication
    xmlns:mx="http://www.adobe.com/2006/mxml"
    title="as3xmppclient"
    width="600"
    height="600"
    paddingTop="5"
    paddingLeft="5"
    paddingRight="5"
    paddingBottom="5"
    backgroundGradientColors="[0x0099cc, 0x006666]"
    creationComplete="start();"
    layout="vertical"
    >
    <mx:Script>
    <![CDATA[

    private function start():void
    {
        DemoApp.app.rootWindow = this;
    }

    private function openSettingWindow():void
    {
        DemoApp.app.openSettingWindow();
    }

    public function log(s:String):void
    {
        logView.text += s;
    }

    public function logLine(s:String):void
    {
        logView.text += s;
        logView.text += "\n";
    }

    public function connect():void
    {
        DemoApp.app.connect();
    }

    ]]>
    </mx:Script>
    <mx:VBox width="100%" height="100%">
        <mx:HBox width="100%" height="30">
            <mx:Button label="Setting" click="openSettingWindow()"/>
            <mx:Button label="Connect" click="connect()"/>
        </mx:HBox>
        <mx:TextArea id="logView" width="100%" height="100%"/>
    </mx:VBox>
</mx:WindowedApplication>
