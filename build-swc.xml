<!--
 To build as3xmppclient.swc, use

   compc -load-config=build-swc.xml
   acompc -load-config=build-swc.xml

 That is all.
-->
<flex-config>
  <target-player>10.0.0</target-player>
  <compiler>
    <external-library-path>
      <path-element>${flexlib}/libs/player/10/playerglobal.swc</path-element>
    </external-library-path>
    
    <source-path>
      <path-element>src</path-element>
    </source-path>
  </compiler>
  <include-classes>
      <class>org.coderepos.date.W3CDTF</class>
      <class>org.coderepos.net.xmpp.XMPPStream</class>
      <class>org.coderepos.net.xmpp.XMPPConfig</class>
      <class>org.coderepos.net.xmpp.XMPPConnection</class>
      <class>org.coderepos.net.xmpp.XMPPNamespace</class>
      <class>org.coderepos.net.xmpp.XMPPMessage</class>
      <class>org.coderepos.net.xmpp.XMPPPresence</class>
      <class>org.coderepos.net.xmpp.XMPPServerFeatures</class>
      <class>org.coderepos.net.xmpp.ChatState</class>
      <class>org.coderepos.net.xmpp.EntityCapabilities</class>
      <class>org.coderepos.net.xmpp.JID</class>
      <class>org.coderepos.net.xmpp.IQType</class>
      <class>org.coderepos.net.xmpp.MessageType</class>
      <class>org.coderepos.net.xmpp.PresenceType</class>
      <class>org.coderepos.net.xmpp.StatusType</class>
      <class>org.coderepos.net.xmpp.SubscriptionType</class>
      <class>org.coderepos.net.xmpp.exceptions.XMPPProtocolError</class>
      <class>org.coderepos.net.xmpp.events.XMPPErrorEvent</class>
      <class>org.coderepos.net.xmpp.events.XMPPStreamEvent</class>
      <class>org.coderepos.net.xmpp.events.XMPPPresenceEvent</class>
      <class>org.coderepos.net.xmpp.events.XMPPMessageEvent</class>
      <class>org.coderepos.net.xmpp.events.XMPPSubscriptionEvent</class>
      <class>org.coderepos.net.xmpp.handler.IXMPPStreamHandler</class>
      <class>org.coderepos.net.xmpp.handler.InitialHandler</class>
      <class>org.coderepos.net.xmpp.handler.TLSHandler</class>
      <class>org.coderepos.net.xmpp.handler.SASLHandler</class>
      <class>org.coderepos.net.xmpp.handler.ResourceBindingHandler</class>
      <class>org.coderepos.net.xmpp.handler.SessionEstablishmentHandler</class>
      <class>org.coderepos.net.xmpp.handler.InitialRosterHandler</class>
      <class>org.coderepos.net.xmpp.handler.CompletedHandler</class>
      <class>org.coderepos.net.xmpp.roster.RosterItem</class>
      <class>org.coderepos.net.xmpp.roster.RosterResource</class>
      <class>org.coderepos.net.xmpp.util.IDGenerator</class>
      <class>org.coderepos.net.xmpp.util.ReconnectionManager</class>
  </include-classes>
  <metadata>
    <creator>Lyo Kato</creator>
    <description>http://github.com/lyokato/as3xmppclient.git</description>
    <language>EN</language>
    <title>AS3 XMPP Client Library</title>
  </metadata>
  <output>bin/as3xmppclient-1_0_0.swc</output>
</flex-config>

